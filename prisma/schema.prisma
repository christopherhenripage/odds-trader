generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// User Model
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts             Account[]
  sessions             Session[]
  notificationSetting  NotificationSetting?
  scannerSetting       ScannerSetting?
  paperAccount         PaperAccount?
  paperPositions       PaperPosition[]
  opportunityDeliveries OpportunityDelivery[]

  // Promo Profit Tracker
  completedPromos      CompletedPromo[]
  bookmakerAccounts    BookmakerAccount[]
}

// ============================================
// Notification Settings
// ============================================

enum NotificationChannel {
  DISCORD
  TELEGRAM
  EMAIL
  NONE
}

model NotificationSetting {
  id              String              @id @default(cuid())
  userId          String              @unique
  channel         NotificationChannel @default(NONE)
  discordWebhook  String?
  telegramBotToken String?
  telegramChatId  String?
  emailTo         String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// Scanner Settings (per user)
// ============================================

model ScannerSetting {
  id              String   @id @default(cuid())
  userId          String   @unique
  minEdge         Float    @default(0.5)
  minMiddleWidth  Float    @default(0.5)
  stakeDefault    Float    @default(100)
  sportsSelection String[] @default([])
  marketsSelection String[] @default(["h2h", "totals", "spreads"])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// Opportunity Model
// ============================================

enum OpportunityType {
  ARB
  MIDDLE
}

model Opportunity {
  id            String          @id @default(cuid())
  fingerprint   String          @unique
  createdAt     DateTime        @default(now())
  eventId       String
  sportKey      String
  sportTitle    String?
  commenceTime  DateTime
  homeTeam      String
  awayTeam      String
  type          OpportunityType
  marketKey     String
  edgePct       Float
  middleWidth   Float?
  legs          Json
  raw           Json?

  deliveries OpportunityDelivery[]

  @@index([createdAt])
  @@index([sportKey])
  @@index([type])
  @@index([eventId])
}

// ============================================
// Opportunity Delivery Tracking
// ============================================

enum DeliveryStatus {
  SENT
  FAILED
  SKIPPED
}

model OpportunityDelivery {
  id            String              @id @default(cuid())
  opportunityId String
  userId        String
  status        DeliveryStatus
  channel       NotificationChannel
  error         String?
  createdAt     DateTime            @default(now())

  opportunity Opportunity @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([opportunityId])
  @@index([userId])
  @@index([createdAt])
}

// ============================================
// Paper Trading Models
// ============================================

model PaperAccount {
  id              String   @id @default(cuid())
  userId          String   @unique
  bankroll        Float    @default(1000)
  maxOpen         Int      @default(5)
  enabled         Boolean  @default(false)
  autoFill        Boolean  @default(false)
  latencyMsMin    Int      @default(400)
  latencyMsMax    Int      @default(2200)
  slippageBps     Int      @default(35)
  missFillProb    Float    @default(0.08)
  maxLegOddsWorsen Float   @default(0.15)
  fillEvenIfEdgeLost Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum PaperPositionStatus {
  OPEN
  CLOSED
  MISSED
  EDGE_LOST
}

model PaperPosition {
  id          String              @id @default(cuid())
  userId      String
  createdAt   DateTime            @default(now())
  closedAt    DateTime?
  type        OpportunityType
  eventId     String
  summary     String
  stakeTotal  Float
  edgePct     Float
  status      PaperPositionStatus
  legs        Json
  notes       String?
  payout      Float?
  latencyMs   Int?
  slippageApplied Json?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// ============================================
// Worker Heartbeat
// ============================================

model WorkerHeartbeat {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  lastScanAt  DateTime
  polls       Int      @default(0)
  lastError   String?
  apiCalls    Int      @default(0)

  @@index([createdAt])
}

// ============================================
// Promo Profit Tracker Models
// ============================================

enum PromoType {
  SIGN_UP_BONUS      // New account bonus
  DEPOSIT_MATCH      // Deposit match bonus
  FREE_BET           // Free bet credit
  ODDS_BOOST         // Enhanced odds
  MONEY_BACK         // Money back if X happens
  MULTI_BOOST        // Multi/parlay boost
  RELOAD_BONUS       // Existing customer deposit bonus
  OTHER              // Other promo types
}

enum PromoStatus {
  ACTIVE             // Currently available
  EXPIRED            // No longer available
  UPCOMING           // Coming soon
}

model Promo {
  id              String      @id @default(cuid())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  bookmaker       String      // e.g., "sportsbet", "ladbrokes"
  bookmakerName   String      // Display name: "Sportsbet"
  title           String      // "Bet $50, Get $50 Free Bet"
  description     String?     // Longer description
  type            PromoType
  status          PromoStatus @default(ACTIVE)

  // Value fields
  minDeposit      Float?      // Minimum deposit required
  maxBonus        Float?      // Maximum bonus value
  estimatedValue  Float?      // Estimated $ value (EV)
  wagerReq        Float?      // Wagering requirement multiplier
  minOdds         Float?      // Minimum odds requirement

  // Validity
  expiresAt       DateTime?
  termsUrl        String?

  // For ordering/featuring
  featured        Boolean     @default(false)
  sortOrder       Int         @default(0)

  completedPromos CompletedPromo[]

  @@index([bookmaker])
  @@index([status])
  @@index([type])
}

enum CompletedPromoStatus {
  IN_PROGRESS        // Started but not finished
  COMPLETED          // Successfully extracted profit
  FAILED             // Lost money or couldn't complete
}

model CompletedPromo {
  id              String               @id @default(cuid())
  userId          String
  promoId         String?              // Link to Promo if from our list
  createdAt       DateTime             @default(now())
  completedAt     DateTime?

  // Promo details (copied for history even if promo deleted)
  bookmaker       String
  promoTitle      String
  promoType       PromoType

  // Financial tracking
  qualifyingStake Float?               // Amount wagered to qualify
  qualifyingLoss  Float?               // Loss on qualifying bet
  freeStake       Float?               // Free bet value
  profit          Float?               // Net profit extracted
  status          CompletedPromoStatus @default(IN_PROGRESS)

  notes           String?

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  promo Promo? @relation(fields: [promoId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([promoId])
  @@index([createdAt])
  @@index([bookmaker])
}

enum BookmakerStatus {
  ACTIVE             // Good standing
  LIMITED            // Account limited (restricted stakes)
  GUBBED             // Banned from promos
  BANNED             // Account closed
  PENDING            // Awaiting verification
}

model BookmakerAccount {
  id              String          @id @default(cuid())
  userId          String
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  bookmaker       String          // e.g., "sportsbet"
  bookmakerName   String          // Display name
  status          BookmakerStatus @default(ACTIVE)

  // Balance tracking (optional)
  balance         Float?
  lastUpdated     DateTime?

  // Account details
  username        String?         // For reference only
  signUpDate      DateTime?
  signUpBonus     Boolean         @default(false) // Did they claim sign-up bonus?

  notes           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookmaker])
  @@index([userId])
  @@index([status])
}
